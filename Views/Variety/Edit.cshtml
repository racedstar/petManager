@model PetGroomingManager.Models.Comm_Variety

@{
    ViewBag.Title = "修改品種";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var kindSN = ViewBag.kindSN;
}

<div class="systemGroup">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SN)

            <div class="form-group">
                <label class="control-label col-md-2">品種</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.varietyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.varietyName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="修改" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("返回列表", "Index", new { kindSN = @kindSN })
    </div>
</div>