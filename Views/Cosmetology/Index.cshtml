@using X.PagedList.Mvc;
@using X.PagedList;
@model IEnumerable<PetGroomingManager.Models.Comm_Cosmetology>

@{
    ViewBag.Title = "美容項目";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="systemGroup">
    <h2>@ViewBag.Title</h2>

    <p style="text-align:right">
        @Html.ActionLink("新增項目", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                項目名稱
            </th>
            <th>
                價格
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cosmetologyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { SN = item.SN }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
    {
        ContainerDivClasses = new[] { "" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        MaximumPageNumbersToDisplay = 10
    })
</div>